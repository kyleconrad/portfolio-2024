---
const { content } = Astro.props;

const srcset = content.url + '?fm=webp&w=800 800w, ' + content.url + '?fm=webp&w=1200 1200w, ' + content.url + '?fm=webp&w=1600 1600w, ' + content.url + '?fm=webp ' + content.width + 'w'
const sizes = '(max-width: 700px) 800px, (max-width: 1024px) 1200px, (max-width: 1600px) 1600px, ' + content.width + 'px';
---
<img
    srcset={ srcset }
    sizes={ sizes }
    src={ content.url }
    width={ content.width }
    height={ content.height }
    alt={ content.description }
    decoding="async"
    loading="lazy"
    class="z--1"
/>